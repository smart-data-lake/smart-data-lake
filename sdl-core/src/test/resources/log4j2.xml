<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c - %msg [%t]%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- WARN level as default -->
        <Root level="WARN"><AppenderRef ref="Console"/></Root>
        <!-- INFO level for SDLB -->
        <logger name="io.smartdatalake" level="INFO" />
        <!-- ERROR level to ignore some warnings -->
        <logger name="org.apache.hadoop.hive.conf.HiveConf" level="ERROR"/>
        <logger name="org.apache.hadoop.hive.metastore.ObjectStore" level="ERROR"/>
        <logger name="org.apache.hadoop.hive.ql.session.SessionState" level="ERROR"/>
        <logger name="org.apache.spark.sql.catalyst.analysis.SimpleFunctionRegistry" level="ERROR"/>
        <logger name="org.apache.spark.sql.execution.streaming.ResolveWriteToStream" level="ERROR"/>
        <logger name="org.apache.spark.sql.execution.streaming.ProcessingTimeExecutor" level="ERROR"/>
        <logger name="org.apache.spark.executor.ProcfsMetricsGetter" level="ERROR"/>
    </Loggers>
</Configuration>